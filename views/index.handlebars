<div class="container">
    <div class="row">
        <div class="col-xs-12 text-center enter_section" id="top-bar">
            <h1>Devour all the Burgers!</h1>
        </div>
    </div>
</div>
{{!-- container where entries appear alongside a button  --}}
<div class="container">
    <div class="row" >
        <div id="image" class="mx-auto" class="img-fluid">
            <img src="http://localhost:3000/assets/img/cute_burger.png" alt="cute cartoon burger image"/>
        </div>
    </div>
</div>
{{!-- container where entries appear alongside a button then move to the right side as readonly  --}}
<div class="container">
    <div class="row">
        <div class="col-xs-6 text-center" class="task">
            {{#each burger_data}}
            {{#unless this.devoured}}
            <div class="col-xs-9 text-center">
                <pre>{{this.id}}. {{this.burger_name}}</pre>
            </div>
            <div class="col-xs-3 text-center">
                <form method="POST" action="/burgers/update?_method=PUT" class ="button-size">
                    <input type="hidden" name="burger_id" type="text" value={{this.id}}>
                    <br>
                    <button type="submit" class="btn btn-success">Devour</button>
                </form> 
            </div>
            {{/unless}}
            {{/each}}
        </div>
        {{!-- this div holds code to ensure the text and buttons don't disappear but move to another side of the page after the devour botton is pressed --}}
        <div class="col-xs-6 text-center" class="task">
            {{#each burger_data}}
                {{#if this.devoured}}
                    <input class="form-control" type="text" placeholder="{{this.id}}. {{this.burger_name}}" readonly>
                {{/if}}
            {{/each}}
        </div>
    </div>
</div>
{{!-- form to enter new burgers --}}
<div class="container">
    <div class="row">
        <div class="col-xs-12 text-center enter_section">
            <form action="/burgers/create" method="POST">
                <input type="text" name="burger_name" class="form-control" value="" id="enter_text">
                <button type="submit" class="btn btn-primary" id="text-enter-button">Submit :D</button>
                <h6>Enter a burger name you want to devour and click submit!</h6>
            </form>
        </div>
    </div>
</div>